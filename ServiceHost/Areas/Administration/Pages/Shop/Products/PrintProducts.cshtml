@page
@model ServiceHost.Areas.Administration.Pages.Shop.Products.PrintProductsModel
@{
}

@{
    Layout = "Shared/_PrintLayout";
    ViewData["title"] = "چاپ محصولات";
}


<div class="row" id="ProductCategoriesDiv">
    <div class="col-md-12">
        <div class="panel panel-default">
            <div class="panel-heading">
                <h3 class="panel-title">لیست محصولات (@Model.products.Count)</h3>
            </div>
            <div class="panel-body">
                <div class="row">
                    <div class="col-md-12 col-sm-12 col-xs-12">
                        <table id="datatable" class="table table-striped table-bordered">
                            <thead>
                                <tr>
                                    <th>#</th>
                                    <th>عکس</th>
                                    <th>نام</th>
                                    <th>کد</th>
                                    <th>گروه</th>
                                    <th>تاریخ تولید</th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var item in Model.products)
                                {
                                    <tr>
                                        <td>@item.Id</td>
                                        <td>
                                            <img src="@item.Picture" style="width: 70px; height: 70px" />
                                        </td>
                                        <td>@item.Name</td>
                                        <td>@item.Code</td>
                                        <td>@item.Category</td>
                                        @*<td class="text-center">
                                                @if (item.IsInStock)
                                                {
                                                    <i class="fa fa-check fa-2x text-success"></i>
                                                }
                                                else
                                                {
                                                    <i class="fa fa-remove fa-2x text-danger"></i>
                                                }
                                            </td>*@
                                        <td>@item.CreationDate</td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>